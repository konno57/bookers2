<main>
  <p id="notice"><%= notice %></p>
  <div class="container px-5 px-sm-0" >
    <div class="row"> 
      <div class="col-md-3">
          <h2>User info</h2>
            <% if user_signed_in? %>
            <%= image_tag @user.get_profile_image(100,100), class:"rounded-circle";  %>
            <table class="table">
              <thead>
                <tr>
                  <th>name</th>
                  <th><%= current_user.name %></th>
                  <th colspan="2"></th>
                </tr>
              </thead>
             
              <tbody>
                <tr>
                <th>introduction</th>
                <th><%= current_user.introduction %></th>
                </tr>
              <% end %>
              </tbody>
            </table>
            
            <%= link_to 'Edit profile', edit_user_path(current_user) %>


        <h2>New book</h2>
        <%= form_with model: @book,url: '/books', method: :post do |f| %>
        <p>Title</p>
        <%= f.text_field :title %>
	      <p>Opinion</p>
        <%= f.text_area :body %>
	
	      <div class="create"></div>
          <%= f.submit 'Create Book' %>
          <% end %>
      </div>
        
        
        <div class="col-md-8 offset-md-1">
        <h2>Books</h2>
            <table class="table table-hover">
      <thead>
        <tr>
          <th></th>
          <th>Title</th>
          <th>Option</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @books.each do |post| %>
          <tr>
            <td><%= image_tag @user.get_profile_image(100,100), class:"rounded-circle";  %></td>
            <td><%= post.title %></td>
            <td><%= post.body %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
        </div>
    </div>
  </div>
</main>