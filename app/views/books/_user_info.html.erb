<div class="col-md-3">
  <h2>User info</h2>
  <% if user_signed_in? %>
  <%= image_tag user.get_profile_image(100,100) %>
  <table class="table">
    <thead>
      <tr>
        <th>name</th>
        <th><%= user.name %></th>
        <th colspan="2"></th>
      </tr>
    </thead>
             
    <tbody>
      <tr>
        <th>introduction</th>
        <th><%= user.introduction %></th>
      </tr>
      <% end %>
    </tbody>
    </table>
    
    <div class="row">
    <%= link_to edit_user_path(user), class: "btn btn-outline-secondary btn-block" do %>
      <i class="fas fa-user-cog"></i>
      <% end %>
    </div>
       
    <h2 class="mt-3">New book</h2>
    <%= form_with model: book do |f| %>
    <div class="form-group">
      <p>Title</p>
      <%= f.text_field :title, style: "width: 260px;" %>
      </div>
	    <p>Opinion</p>
      <%= f.text_area :body, style: "width: 260px;" %>
	
	    <div class="create">
      <%= f.submit 'Create Book', class: "btn btn-success" %>
      <% end %>
      </div>
    </div>