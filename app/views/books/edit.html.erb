<main>
  <p id="notice"></p>
  <div class="container">
    <div class="row">
      <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">

        <h1>Editing Book</h1>
        <%= form_with model: @book do |f| %>
        
          <% if @book.errors.any? %>
          <div id="error_explanation">
            <h3><%= pluralize(@book.errors.count, "error") %> prohibited this obj from being saved:</h3>
            <ul>
              <% @book.errors.full_messages.each do |message| %>
            <li><%= message %></li>
              <% end %>
           </ul>
        </div>
        <% end %>
        
        
        <div class="form-group">
          <label for="inputName">Title</label><br>
        <%= f.text_field :title, style: "width: 480px;" %>
        </div>
        <div class="form-group">
          <label for="inputName">Opinion</label><br>
        <%= f.text_area :body, style: "width: 480px;" %>
  
        <div class="update"></div>
        <%= f.submit 'Update Book', class: "btn btn-success" %>
        <% end %>
  
        <div></div>
          <%= link_to 'Show', @book %> |
          <%= link_to 'Back', books_path %>
        </div>
      </div>
    </div>
  </div>
</main>